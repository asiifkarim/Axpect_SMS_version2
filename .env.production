# Production Environment Variables
# Copy this file to .env and fill in your actual values

# Django Settings
SECRET_KEY=your-super-secret-production-key-here-make-it-long-and-random
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-server-ip
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Database
POSTGRES_PASSWORD=your-secure-postgres-password
DATABASE_URL=postgres://axpect_user:your-secure-postgres-password@db:5432/axpect_sms

# Redis URLs
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CHANNEL_REDIS_URL=redis://redis:6379/1
CACHE_REDIS_URL=redis://redis:6379/2
DEFENDER_REDIS_URL=redis://redis:6379/3

# Email Configuration
EMAIL_ADDRESS=your-email@yourdomain.com
EMAIL_PASSWORD=your-email-app-password

# Google OAuth for Drive Integration
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret

# AI Configuration
OPENAI_API_KEY=your-openai-api-key
GEMINI_API_KEY=your-gemini-api-key
AI_MODEL=gemini

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
GRAFANA_PASSWORD=your-grafana-admin-password

# SSL/TLS (if using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
